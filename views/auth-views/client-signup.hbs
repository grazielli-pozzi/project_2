<form action="/adv/client-signup" method="post">
<div>
    <label for="fullName">Nome completo</label>
    <input type="text" name="fullName" id="fullName" placeholder="Digite o seu nome completo.">

    {{#if fullNameError}}
        <div>
            <span>{{fullNameError}}</span>
        </div>
    {{/if}}

</div>

<div>
    <label for="email"></label>
    <input type="text" name="email" id="email" placeholder="Digite o seu email.">

    {{#if emailError}}
        <div>
            <span>{{emailError}}</span>
        </div>
    {{/if}}
</div>

<div>
    <label for="cpf"></label>
    <input type="text" name="cpf" id="cpf" placeholder="Digite o seu CPF.">

    {{#if cpfError}}
        <div>
            <span>{{cpfError}}</span>
        </div>
    {{/if}}
</div>

<div>
    <label for="password"></label>
    <input type="password" name="password" id="password" placeholder="Digite a sua senha.">

    {{#if passwordError}}
        <div>
            <span>{{passwordError}}</span>
        </div>
    {{/if}}
</div>

<div>
    <label for="confirmationPassword"></label>
    <input type="password" name="confirmationPassword" id="confirmationPassword" placeholder="Confirme a sua senha.">

    {{#if confirmationPasswordError}}
        <div>
            <span>{{confirmationPasswordError}}</span>
        </div>
    {{/if}}
</div>

<button type="submit">Cadastrar</button>

<a href="/adv/client-login">
    <button type="button">Entrar com a minha conta</button>
</a>
</form>